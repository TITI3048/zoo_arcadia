        body {
            background: linear-gradient(to right, #f9fbb5, #34ae71b8);
            padding: 50px;
        }
        .avis {
            background: white;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .stars {
            font-size: 24px;
            cursor: pointer;
        }
        .stars .active {
            color: gold;
        }
    </style>
</head>
<body>

<div class="container">
    <h1 class="text-center mb-4">Laisser un Avis</h1>
    <form action="" method="post" class="avis">
        <div class="form-group">
            <label for="titre">Prénom</label>
            <input type="text" name="titre" class="form-control" title="Prénom" placeholder="Entrez votre prénom" required>
        </div>
        <div class="form-group">
            <label for="commentaire">Avis</label>
            <textarea name="comment" id="commentaire" class="form-control" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label>Note</label>
            <div class="stars">
                <i class="lar la-star" data-value="1"></i>
                <i class="lar la-star" data-value="2"></i>
                <i class="lar la-star" data-value="3"></i>
                <i class="lar la-star" data-value="4"></i>
                <i class="lar la-star" data-value="5"></i>
            </div>
            <input type="hidden" name="note" id="note" value="0">
        </div>
        <button class="btn btn-primary" type="submit">Valider</button>
        <ul class="list-unstyled mt-3">
            <li><a href="accueil.html" class="btn btn-link">Retour à l'accueil</a></li>
        </ul>
    </form>
</div>

<script>
    const stars = document.querySelectorAll('.stars .lar');
    const noteInput = document.getElementById('note');

    stars.forEach(star => {
        star.addEventListener('click', () => {
            const value = star.getAttribute('data-value');
            noteInput.value = value;

            stars.forEach(s => {
                s.classList.remove('active');
            });
            for (let i = 0; i < value; i++) {
                stars[i].classList.add('active');
            }
        });
    });
</script>

